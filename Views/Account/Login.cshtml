@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FPTBook.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://kit.fontawesome.com/63149990bf.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="portal-form-wrapper">
        <div class="portal-form-content">
            <div class="content-header">
                <a asp-area="" asp-controller="Home" asp-action="Index">
