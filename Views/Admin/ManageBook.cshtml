
@{
    ViewData["Title"] = "ManageBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/FPTBook.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.6.0/remixicon.css" />
    <script src="https://kit.fontawesome.com/63149990bf.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon"
          href="assets/img/favicon.png"
          type="image/x-icon" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" />
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />

    <title>Responsive book website</title>
</head>
<body>
    <div class="manage_book-container">
        <siline class="siline-main">

            <div class="navbar-item-A1">

                <ul class="navbar-nav">
                    <li class="nav-item-main">
                        <p class="">ANALYIS</p>
                    </li>

                    <li class="nav-item-abc1">
                        <a class=" active-main" asp-area="" asp-controller="Admin" asp-action="Index">
                            <span class="nav-link-text">
                                <i class="fa-solid fa-magnifying-glass-chart"></i>
                                <linkk> Table Analyis</linkk>
                            </span>
                        </a>
                    </li>

                    <li class="nav-item-main">
                        <p class="">MANAGE</p>
                    </li>

                    <li class="nav-item-abc1">
                        <a class="active-main" asp-area="" asp-controller="Admin" asp-action="ManageBook">
                            <span class="nav-link-text ">
                                <i class="fa-solid fa-user"></i>
                                <linkk> Book</linkk>
                            </span>
                        </a>
                    </li>


                    <li class="nav-item-abc1">
                        <a class=" active-main" asp-area="" asp-controller="Admin" asp-action="ManageCustomer">
                            <span class="nav-link-text ">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <linkk> Customer</linkk>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </siline>
        <div class="Manageuser-body-main">
            <div class="table-content-01">
                <div class="information-store-owner" style="
            max-height: 80vh;
            overflow-y: auto;">
                    <div class="title-owner">

                        <div>
                            <p class="store-owner-for">
                                MANAGE Product
                            </p>
                        </div>
                        <a asp-controller="StoreOwner" asp-action="AddProduct" class="btn-book-add"><button class="button" id="btn-book-add"><i class="fa-solid fa-plus"></i></button></a>

                    </div>
                    <table class="tabale-store-owner">
                        <tr class="table-tr-store-main">
                            <th class="th-table-store">Image </th>
                            <th class="th-table-store">Title </th>
                            <th class="th-table-store">Price</th>
                            <th class="th-table-store">Inventory</th>
                            <th class="th-table-store">Action</th>
                        </tr>

                        <tr class="table-tr-store">
                            <td class="td-table-store">
                                <img id="avatar" class="image-user-store-owner" width="60" height="60" src="~/images/book-3-1.png" />
                            </td>
                            <td class="td-table-store">999 Lá Thư Gửi Cho Chính Mình</td>
                            <td class="td-table-store">$18</td>
                            <td class="td-table-store">100</td>
                            <td class="td-table-store">
                                <a asp-controller="StoreOwner" asp-action="EditProduct" class="btn-book-edit"><button class="btn-book-edit button" id="btn-book-edit"><i class="fa-solid fa-pencil"></i></button></a>
                                <button class="btn-book-delete button" type="submit"><i class="fa-solid fa-trash-can"></i></button>
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/swiper-bundle.min.js"></script>
    <script src="~/js/scrollreveal.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>

